<% layout('layouts/boilerplate')%>
<div class="container">
  <div class="col-sm-6 col-sm-offset-3 mx-auto">
    <h1><span class="fa fa-sign-in"></span> Schedule Appointment</h1>
    <form
      action="/frontdesk/patient/<%= id %>/bookappointment"
      method="post"
      class="validated-form"
      novalidate
    >
      <div class="form-group mb-3">
        <label for="doctor">Doctor</label>
        <select name="doctorID" id="doctor" class="form-control">
          <% for(let doctor of doctors) { %>
          <option value="<%= doctor.doctorID %>">
            <%= doctor.Name %> - <%= doctor.Department %>
          </option>
          <% } %>
        </select>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        <div class="col-3 d-inline-block">
          <input
            type="date"
            id="date"
            class="form-control mb-3 appointmentDate"
            name="Date"
            required
          />
        </div>
        <div class="col-3 d-inline-block">
          <input
            type="time"
            class="form-control mb-3 appointmentTime"
            name="time"
            required
          />
        </div>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="form-group mb-3">
        <label for="reason">Reason</label>
        <textarea
          class="form-control"
          name="reason"
          id="reason"
          cols="10"
          rows="1"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button type="submit" class="btn btn-warning btn-lg">Register</button>
      <a
        href="/frontdesk/patient/<%= id %>/emergency"
        class="btn btn-danger btn-lg"
        >Emergency</a
      >
    </form>
    <hr />
  </div>
</div>
<script src="/js/frontdesk-appointment-date.js"></script>
